APP_NAME="Morning Brew Collective"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Singapore

FRONTEND_URL=http://localhost:3000

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
#DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=morning_brew
DB_USERNAME=brew_user
DB_PASSWORD=brew_secret

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@morningbrew.sg"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Singapore-Specific Tax Configuration
GST_RATE=0.09
CURRENCY_CODE=SGD

# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=SGD
STRIPE_MODE=test
STRIPE_VERSION=2024-04-10

# PayNow
PAYNOW_UEN=
PAYNOW_API_KEY=
PAYNOW_API_SECRET=
PAYNOW_API_URL=https://api.paynow.com
PAYNOW_MODE=test

# Payment Currency
PAYMENT_CURRENCY=SGD
