{
  "name": "morning-brew-e2e-tests",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/visual/visual-regression.spec.ts",
    "test:payment": "playwright test tests/e2e/payment-flows.spec.ts",
    "test:payment:headed": "playwright test tests/e2e/payment-flows.spec.ts --headed",
    "test:lighthouse": "lhci autorun",
    "test:accessibility": "axe --exit",
    "test:ci": "npm run test:e2e && npm run test:lighthouse && npm run test:visual",
    "report:serve": "npx http-server ./test-results --port 8080",
    "baseline:update": "playwright test tests/visual/visual-regression.spec.ts --update-snapshots"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@lhci/cli": "^0.13.0",
    "axe-core": "^4.8.4",
    "axe-playwright": "^1.2.3",
    "lighthouse": "^11.4.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "http-server": "^14.1.1"
  },
  "playwright": {
    "testDir": "./tests",
    "outputDir": "./test-results",
    "snapshotDir": "./test-results/snapshots",
    "reporter": [
      "html",
      { "name": "json", "outputFile": "./test-results/report.json" },
      { "name": "list" }
    ]
  }
}
